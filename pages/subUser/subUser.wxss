/* 图片 */
.ipic {
  flex-direction: column;
  margin-bottom: 0;
}

.ipic .scL {
  align-self: flex-start;
}

.picBox {
  width: 100%;
  align-self: flex-start;
}

.imgBox {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}

.imgBox>view {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.subImg {
  margin-bottom: 20rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background-color: #DFF7E8;
  text-align: center;
  /* line-height: 160rpx; */
  font-size: 34rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.ad {
  width: 60rpx;
  height: 60rpx;
}

.subImg image.addP {
  width: 60rpx;
  height: 60rpx;
}

.subImg image.delP {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -15rpx;
  right: 0;
}

.subImg image {
  width: 160rpx;
  height: 160rpx;
}

.tx {
  color: #333333;
  font-size: 28rpx;
  font-weight: lighter;
}
/* 推荐购买 */


.radioBox{
  display: flex;
  margin-bottom: 15rpx;
}
.radioBtn{
  margin-right: 8rpx;
}
radio .wx-radio-input {
  /* 自定义样式.... */
  height: 40rpx;
  width: 40rpx;
  margin-top: -8rpx;
  border-radius: 50%;
  border: 2rpx solid #09bb07;
  background: transparent;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #09bb07;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
