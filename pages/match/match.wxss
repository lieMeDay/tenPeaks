/* pages/match/match.wxss */
.matchLogo{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.matchLogo>image{
  width: 100%;
  height: 100%;
}
.totnum{
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  padding: 10rpx 25rpx;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 10;
  border-radius: 30rpx;
  color: #fff;
  font-size: 32rpx;
}
.totnum>text{
  color: #16C95D;
}
.promtBox {
  width: 80%;
  padding: 30rpx 0;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0 auto;
  margin-top: -110rpx;
  border-radius: 10rpx;
  position: relative;
  z-index: 10;
  box-shadow:0px 10px 10px 0px rgba(0, 0, 0, 0.1);
}

.promtBox>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.promtBox>view>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.gornu{
  font-weight: normal;
  width: auto !important;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.conImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.conImg image {
  width: 120rpx;
  height: 120rpx;
}
.vv {
  color: #333;
  font-size: 28rpx;
  line-height: 40rpx;
}
.matchWrap{
  width: 95%;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 40rpx;
  padding-bottom: 120rpx;
}
.mt{
  font-size: 40rpx;
  font-weight: 500;
  line-height: 80rpx;
  font-weight: 500;
  font-size: 38rpx;
}
.ric{
  font-size: 30rpx;
}
.ric .inPimg{
  width: 100%;
  height: 100%;
}
.ric .ql-align-center{
  text-align: center;
}
.btnBox{
  width: 100%;
  height: 90rpx;
  padding: 15rpx 0;
  bottom: 0;
  position: fixed;
  z-index: 100;
  background-color: #fff;
  box-shadow:0px 0px 10px 0px rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: space-around;
}
.btn{
  width: calc(50% - 60rpx) !important;
  text-align: center;
  line-height: 90rpx;
  color: #16C95D;
  border-radius: 50rpx;
  background-color: #F2F2F2;
  font-size: 32rpx;
}
.black{
  background-color: #16C95D;
  color: #fff;
}
