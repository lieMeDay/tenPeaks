
.head{
  width: 100%;
  height: 300rpx;
  /* background-color: #d7d7d7; */
  overflow: hidden;
  position: relative;
}
.hp{
  width: 100%;
  height: 300rpx;
  position: absolute;
}
.userCon{
  width: 80%;
  margin: 50rpx auto;
  margin-top: 150rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 10;
}
.headImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #999;
  margin-right: 20rpx;
  overflow: hidden;
}
.headImg image{
  width: 100rpx;
  height: 100rpx;
}
.tn{
  color: #fff;
}
.gubtn{
  width: auto !important;
  font-weight: normal;
  padding: 0;
  background-color: transparent;
  color: #fff;
}
.gubtn::after{
  border: none;
}
.listWrap{
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}
.listBox{
  width: 94%;
  margin: 0 auto;
  line-height: 90rpx;
  border-bottom: 2rpx solid #E8E8E8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.listBox:last-child{
  border-bottom: none;
}
.l,.r{
  display: flex;
  align-items: center;
}
.l image,
.r image{
  width: 50rpx;
  height: 50rpx;
}